<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ListView
        android:id="@+id/notice_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="#00000000">
    </ListView>

    <ProgressBar
        android:id="@+id/notice_loading"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/notice_page_fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_btn"
        android:text="1"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/notice_arc"
        android:visibility="invisible"
        android:layout_margin="10dp"
        android:layout_alignBottom="@id/notice_listview"
        android:layout_alignRight="@id/notice_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="52dp"/>

        <Button
            android:id="@+id/notice_browser_btn"
            android:layout_marginRight="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_open_in_browser"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/prev_notice_btn"
            android:layout_marginRight="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_btn"
            android:textColor="@color/colorBackground"
            android:text="&lt;"
            android:textSize="25dp" />

        <Button
            android:id="@+id/next_notice_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/circle_btn"
            android:textColor="@color/colorBackground"
            android:text="&gt;"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="52dp"/>

    </LinearLayout>

</RelativeLayout>